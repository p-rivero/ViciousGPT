<Window x:Class="ViciousGPT.SubtitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViciousGPT"
        mc:Ignorable="d"
        Title="ViciousGPT Subtitles" Height="362" Width="859"
        AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#00000000" Offset="0.0" />
            <GradientStop Color="#F0000000" Offset="0.7" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Border BorderBrush="{x:Null}" Margin="10,50,10,10">
            <local:OutlinedTextBlock
                x:Name="subtitleText"
                TextWrapping="WrapWithOverflow"
                TextAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Aldine721}"
                FontSize="30.0"
                Fill="White"
                Stroke="Black"
                StrokeThickness="4">
            </local:OutlinedTextBlock>
        </Border>

    </Grid>
</Window>
